// web-dashboard/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Modèle Utilisateur (Lié à Clerk via l'ID)
model User {
  id        String   @id // C'est l'ID que Clerk nous donnera (ex: user_2n...)
  email     String   @unique
  role      String   @default("LAMBDA") // "ADMIN" ou "LAMBDA"
  scans     Scan[]
  createdAt DateTime @default(now())
}

// Modèle Scan (L'historique)
model Scan {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  repoUrl     String
  status      String   @default("PENDING")
  resultUrl   String?
  owaspReport Json?    // Détails complets (ex: liste des failles)
  score       Int?     // Note de sécurité (ex: 0 à 100, ou 1 à 5)
  createdAt   DateTime @default(now())
  finishedAt  DateTime?
}